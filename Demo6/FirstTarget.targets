<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Target Name="CompileFirstDefinition" BeforeTargets="ClCompile">
    <ItemGroup>
      <ClCompile>
        <PreprocessorDefinitions>MODULE_ONE=1;FIRST_TARGET=1;EXTRA_FIRST=1;%(PreprocessorDefinitions)</PreprocessorDefinitions>
      </ClCompile>
    </ItemGroup>
  </Target>


  <Target Name="CompileFirstTarget">
    <ItemGroup>
      <ClCompile Include="FirstModule.cpp">
        <PrecompiledHeader>NotUsing</PrecompiledHeader>
      </ClCompile>
    </ItemGroup>
  </Target>

  <PropertyGroup>
    <BeforeClCompileTargets>$(BeforeClCompileTargets);CompileFirstTarget;CompileFirstDefinition</BeforeClCompileTargets>
  </PropertyGroup>

</Project>
